{
  "manifest_version": 1,
  "id": "shelly-adapter",
  "name": "Shelly",
  "short_name": "Shelly",
  "version": "1.9.0",
  "description": "Connect your shelly devices",
  "homepage_url": "https://github.com/tim-hellhake/shelly-adapter#readme",
  "license": "MPL-2.0",
  "author": "Tim Hellhake",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "{nodeLoader} {path}",
      "strict_min_version": "1.0.0",
      "strict_max_version": "*",
      "primary_type": "adapter"
    }
  },
  "options": {
    "schema": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "title": "The username"
        },
        "password": {
          "type": "string",
          "title": "The password"
        },
        "debugLogs": {
          "type": "boolean",
          "title": "Enable debug logs"
        },
        "networkInterface": {
          "type": "string",
          "title": "The interface on which should be listened for multicast traffic. Leave it empty if you want to listen on all interfaces."
        },
        "enableMqtt": {
          "type": "boolean",
          "title": "Enable mqtt support"
        },
        "mqttBroker": {
          "type": "string",
          "title": "The mqtt broker (defaults to localhost)"
        }
      }
    }
  }
}
